{
    "extends": "airbnb",
    "plugins": [
        "react"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "func-names": 0,
      "space-before-function-paren": 0,
      "padded-blocks": 0,
      "consistent-return": 0,
      "no-else-return": 0,
      "react/prop-types": 0,
      "arrow-body-style": 0,
      "array-callback-return": 0,
      "max-len": [
        1,
        { "ignoreComments": true },
        { "code": 100 }
      ],
      "semi": 1,
      "no-param-reassign": 0,
      "prefer-const": 0,
      "react/jsx-no-bind": 0,
      "no-case-declarations": 0
    }
}
